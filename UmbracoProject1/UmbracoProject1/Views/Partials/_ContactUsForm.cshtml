@using Microsoft.Extensions.Options;
@using UmbracoProject1.Controllers;
@model UmbracoProject1.Models.ContactUsModel

@using Microsoft.Extensions.Configuration
@using UmbracoProject1.Models;
@inject IOptions<CaptchaResponseViewModel> googleRechapch;

@using (Html.BeginUmbracoForm<ContactUsController>("Submit" , FormMethod.Post))
        {
            @* @Html.AntiForgeryToken()
            @Html.ValidationSummary() *@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject)
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Your Subject" })
                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your Message" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>

                    @Html.HiddenFor(m => m.GoogleCaptchaToken, new { id = "token" })

            <input type="Submit" value="Submit" class="btn btn-primary py-3 px-5">

 }
       

@section script{
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?render=@googleRechapch.Value.SiteKey"></script>
}